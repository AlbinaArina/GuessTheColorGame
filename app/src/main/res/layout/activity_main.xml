<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/guess"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:text="@string/guess"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/color1"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@+id/guess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/color2"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@+id/guess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resColor5"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess"
        app:layout_constraintVertical_bias="0.78" />

    <TextView
        android:id="@+id/resColor3"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/resColor5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resColor1"
        app:layout_constraintVertical_bias="0.17000002" />

    <TextView
        android:id="@+id/resColor1"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@+id/resColor5"
        app:layout_constraintEnd_toStartOf="@+id/resColor4"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/resColor2"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@+id/resColor5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toEndOf="@+id/resColor3"
        app:layout_constraintTop_toBottomOf="@+id/guess"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/resColor4"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resColor5"
        app:layout_constraintTop_toBottomOf="@+id/resColor2"
        app:layout_constraintVertical_bias="0.17000002" />

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/resColor5"
        app:layout_constraintEnd_toStartOf="@+id/resColor4"
        app:layout_constraintStart_toEndOf="@+id/resColor3"
        app:layout_constraintTop_toBottomOf="@+id/resColor2" />


</androidx.constraintlayout.widget.ConstraintLayout>